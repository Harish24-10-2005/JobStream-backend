# ============================================
# JobAI Backend Environment Configuration
# Copy this to .env and fill in your values
# ============================================

# ============================================
# Environment & Server Configuration
# ============================================
ENVIRONMENT=development  # development | staging | production
DEBUG=false
LOG_LEVEL=INFO  # DEBUG | INFO | WARNING | ERROR
HOST=0.0.0.0
PORT=8000

# CORS - Comma-separated origins allowed
CORS_ORIGINS=http://localhost:3000,http://127.0.0.1:3000

# Rate Limiting
RATE_LIMIT_ENABLED=true
RATE_LIMIT_REQUESTS=100  # requests per period
RATE_LIMIT_PERIOD=60     # period in seconds

# Request Size Limit (10MB default)
MAX_REQUEST_SIZE=10485760

# ============================================
# Required API Keys
# ============================================
GROQ_API_KEY=gsk_your_groq_api_key_here
SERPAPI_API_KEY=your_serpapi_key_here

# ============================================
# Supabase Configuration (Required)
# ============================================
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_ANON_KEY=eyJ_your_supabase_anon_key
SUPABASE_SERVICE_KEY=eyJ_your_service_role_key  # Optional: for RLS bypass

# ============================================
# Optional AI Model Keys (Fallback providers)
# ============================================
# Gemini (Recommended for browser automation)
GEMINI_API_KEY=your_gemini_api_key

# OpenRouter (Alternative provider)
OPENROUTER_API_KEY=your_openrouter_key
OPENROUTER_API_KEY1=your_backup_openrouter_key

# Groq Fallback
GROQ_API_KEY1=your_backup_groq_key

# Model configurations
GROQ_MODEL=llama-3.1-8b-instant
OPENROUTER_MODEL=qwen/qwen3-next-80b-a3b-instruct:free
GEMINI_MODEL1=gemini-2.0-flash-exp

# ============================================
# Browser Automation
# ============================================
BROWSER_HEADLESS=true  # Set to false for debugging
# Chrome path (auto-detected if not set)
# CHROME_PATH=C:\Program Files\Google\Chrome\Application\chrome.exe
# CHROME_USER_DATA=./chrome_data
# CHROME_PROFILE_DIR=Default

# ============================================
# Security (Required for credential storage)
# ============================================
# Generate with: python -c "import secrets; print(secrets.token_hex(16))"
ENCRYPTION_KEY=your_32_character_encryption_key_here
